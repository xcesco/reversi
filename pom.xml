<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>it.fmt.games.reversi</groupId>
        <artifactId>reversi-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>./reversi-parent/pom.xml</relativePath>
    </parent>

    <artifactId>reversi-project</artifactId>
    <version>0.2.0-SNAPSHOT</version>

    <packaging>pom</packaging>
    <name>Reversi project</name>
    <description>Reversi - project</description>
    <url>https://github.com/xcesco/reversi</url>

    <modules>
        <module>reversi-parent</module>
        <module>reversi-core</module>
        <module>reversi-desktop</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.eluder.coveralls</groupId>
                <artifactId>coveralls-maven-plugin</artifactId>
                <version>4.3.0</version>
            </plugin>

            <plugin>
                <artifactId>maven-site-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
            </plugin>

        </plugins>
    </build>

</project>